<!--miniprogram/pages/height/height.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="weui-flex">
      <view class="weui-flex__item page__title">记录身高</view>
    </view>
  </view>
  <view class="page__bd page__bd_spacing">
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="weui-label">日期</view>
      </view>
      <view class="weui-flex__item">
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="weui-input"></view>
        </picker>
      </view>
      </view>
      <view class="weui-flex">
        <view class="weui-flex__item">
          <view class="weui-label">身高</view>
        </view>
        <view class="weui-flex__item">
          <picker mode="multiSelector" range="{{arrayData}}" bindchange="bindTimeChange">
            <view class="weui-input"></view>
          </picker>
        </view>
      </view>
  </view>
</view>